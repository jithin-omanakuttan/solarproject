<div class="container">
    <div class="row">
        <% if(files){ %>
            <% files.forEach(function(file) { %>
              <div class="card card-body mb-3 col-lg-6 col-md-6 col-sm-12 ">
                <% if(file.isImage) { %>
                  <img src="image/<%= file.filename %>" alt="">
                  <% } else { %>
                    <%= file.filename %>
                      <% } %>
                        
              </div>
              <% }) %>
                <% } else { %>
                  <p>No files to show</p>
                  <% } %>
    </div>
